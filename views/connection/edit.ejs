<%- include('../partials/header.ejs')%>
<main>
    <form class="myForm" method="POST" action="/connections/<%= connection.id%>?_method=PUT">
        <div class="form-group"> 
            <label for="type">Type</label>
            <input type="text" id="type" name="type" value="<%= connection.type%>" required>
        </div>
        <div class="form-group"> 
            <label for="title">Title</label>
            <input type="text" id="title" name="title" value="<%= connection.title%>" required>
        </div>
        <div class="form-group"> 
            <label for="details">Details</label>
            <textarea name="details" id="details" required minlength="10"><%= connection.details%></textarea>
        </div>
        <div class="form-group"> 
            <label for="date">Date</label>
            <input type="date" id="date" name="date" value="<%=connection.date.toISOString().substring(0,10)%>" required>
        </div>
        <div class="form-group"> 
            <label for="location">Location</label>
            <input type="text" id="location" name="location" value="<%= connection.location%>" required>
        </div>
        <div class="form-group"> 
            <label for="start">Start Time</label>
            <input type="time" id="starttime" name="starttime" value="<%= connection.starttime%>" min="00:00" max="23:59"  required>
        </div>
        <div class="form-group"> 
            <label for="end">End Time</label>
            <input type="time" id="endtime" name="endtime" value="<%= connection.endtime%>" min="00:00" max="23:59" required>
        </div>
        <div class="form-group"> 
            <label for="imgURL">Image URL</label>
            <input type="text" id="imgURL" name="imgURL" value="<%= connection.imgURL%>" required>
        </div>
        <div>
            <button>Submit</button>
        </div>
    </form>
</main>
    <%- include('../partials/footer.ejs')%>
